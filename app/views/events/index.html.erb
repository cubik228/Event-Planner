<h1>Events</h1>
<%= link_to 'Profile', profiles_path %>

<%= form_tag(events_path, method: 'get') do %>
  <div class="field">
    <%= label_tag 'name', 'Название' %>
    <%= text_field_tag 'name', params[:name], placeholder: 'Введите имя' %>
  </div>

  <div class="field">
    <%= label_tag 'category_id', 'Категория' %>
    <%= collection_select(:event, :category_id, Category.all, :id, :name, { include_blank: true }, { class: 'select2' }) %>
  </div>

  <div class="actions">
    <%= submit_tag 'Фильтровать' %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.description %></td>
        <td><%= event.category.name %></td>
        <!-- <td><%= link_to 'Show', event %></td> -->
        <td>
          <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-primary' if event.created_at >= 5.hours.ago %>
        </td>
        <td><%= button_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
