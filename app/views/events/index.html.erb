<div class="container my-4">
  <h1>Events</h1>

  <%= form_tag(events_path, method: 'get') do %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= label_tag 'name', 'Name' %>
        <%= text_field_tag 'name', params[:name], class: 'form-control', placeholder: 'Enter the name' %>
      </div>

      <div class="form-group col-md-6">
        <%= label_tag 'category_name', 'Category' %>
        <%= select_tag 'category_name', options_for_select(Category.pluck(:name), params[:category_name]), include_blank: 'All Category', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group mt-3">
      <%= submit_tag 'Filter', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Description</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.date %></td>
          <td><%= event.description %></td>
          <td><%= event.category&.name %></td>
          <td><%= link_to 'Show', event, class: 'btn btn-info btn-sm' %></td>
          <td>
            <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-primary btn-sm' if event.created_at >= 5.hours.ago %>
          </td>
          <td><%= button_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path, class: 'btn btn-success' %>
  <div class="center my-4"  style="margin-left: 42%;">
    <%== pagy_bootstrap_nav(@pagy, class: 'mt-3') %>  
  </div>
  
</div>
