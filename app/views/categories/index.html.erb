<h1>Categories</h1>

<%= link_to 'Profile', profiles_path %>
<%= form_tag(categories_path, method: 'get') do %>
  <div class="field">
    <%= text_field_tag 'name', params[:name], placeholder: 'Введите имя' %>
    <%= submit_tag 'Search' %>
  </div>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <!-- <td><%= link_to 'Show', category %></td> -->
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= button_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
