<div class="container">
  <h1 class="my-4">Categories</h1>

  <%= form_tag(categories_path, method: 'get', class: 'mb-3') do %>
    <div class="input-group">
      <%= text_field_tag 'name', params[:name], class: 'form-control', placeholder: 'Enter name' %>
      <div class="input-group-append">
        <%= submit_tag 'Search', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

  <table class="table mt-4">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning btn-sm' %></td>
          <td><%= button_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to 'New Category', new_category_path, class: 'btn btn-success' %>
  </div>
</div>
